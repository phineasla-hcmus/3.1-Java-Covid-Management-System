            </TableView>
            <Label layoutX="348.0" layoutY="83.0" styleClass="sub-label" text="Lịch sử hoạt động" />
            <Button fx:id="updateButton" layoutX="653.0" layoutY="22.0" mnemonicParsing="false" text="Cập nhật" />
