<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seasidechachacha.client.controllers.ViewListPackageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="main-label" text="Danh sách nhu yếu phẩm" textOverrun="CLIP">
        </Label>
        <HBox>
            <AnchorPane prefHeight="24.0" prefWidth="400.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <children>
                    <TextField fx:id="tfSearch" prefHeight="27.0" prefWidth="438.0" promptText="Nhập từ khoá để tìm kiếm" styleClass="search-bar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    <Button fx:id="btnSearch" style="-fx-background-color: #0098f1;" textFill="WHITE" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" />
                        </graphic>
                    </Button>
                </children>
            </AnchorPane>
            
            <Pane HBox.hgrow="ALWAYS">
                <children>
                    <ComboBox fx:id="cbSort" layoutX="135.0" layoutY="2.0" prefWidth="150.0" style="-fx-background-color: transparent; -fx-border-color: #006abc;" />
               <Button fx:id="btnFilter" layoutX="48.0" layoutY="2.0" mnemonicParsing="false">
                  <graphic>
                     <FontAwesomeIconView fill="WHITE" glyphName="FILTER" />
                  </graphic>
               </Button>
                </children>
            </Pane>
            <Button fx:id="btnAdd" style="-fx-background-color: #0098f1;" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="PLUS" />
                </graphic>
            </Button>    
        </HBox> 
        <Pagination fx:id="pagination">          
        </Pagination>
       
    </children>
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
</VBox>
